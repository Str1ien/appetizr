  <% end %>
</div>
<ul class="categories_list">
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant_path(restaurant) do %>
        <div class="category_box">
          <% if restaurant.ruta_img_fondo.present? %>
            <%= image_tag restaurant.ruta_img_fondo, class: "category_image" %>
          <% else %>
            <%= image_tag "Default-restaurant-img", class: "category_image" %>
          <% end %>
          <div class="category_name"><%= restaurant.nombre %></div>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

