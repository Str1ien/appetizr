<div class="responses_container">
  <div class="title_container">
    <h1 class="title">Respuestas al comentario de <span class="title_key_word"><%= @review.autor %></span></h1>
  </div>
  <div class="responses_main_container">
    <div class="responses_original_comment_wrapper">
      <div class="responses_original_comment">
        <%= render "layouts/comment", comments: [@review], locals: {reactions: @review_responses_reactions, user_reactions: @review_responses_user_reactions}%>
      </div>
    </div>
    <div class="responses_list">
      <%= render "layouts/comment", comments: @review_responses, locals: {reactions: @review_responses_reactions, user_reactions: @review_responses_user_reactions} %>
    </div>
  </div>
  <div style="display: flex; justify-content: center">
    <%= render "layouts/add_comment", path_param: new_response_path(response_to: @review.id, response_type: "Review") %>
  </div>
</div>
