<%= form_with model: @category do |form| %>
  <div class="categories_new_form_container">
      <div class="categories_new_name_container">
        <div>
          <label class="my_account_form_label">Nombre de la categoría</label><br>
          <%= form.text_field :nombre, class: "my_account_form_text_field", placeholder: "Burger" %>
        </div>
      </div>
      <div class="my_account_profile_img_container">
        <div class="my_account_profile_img_title">Añade una imagen identificativa</div>
        <% if @category.ruta_img.present? %>
            <%= image_tag "/images/"+@category.ruta_img, class: "categories_new_img" %>
        <% else %>
            <%= image_tag "/images/burger-category.png", class: "categories_new_img" %>
        <% end %>
        <label class="new_post_image_upload_button">
            <%= form.file_field :ruta_img %>
            <%= image_tag "/images/image-icon.svg", class: "new_post_image_upload_icon" %>
            <div class="new_post_image_upload_text">Modificar</div>
        </label>
      </div>

      <div class="categories_new_button_container">
        <%= form.button type: :submit, class: "new_post_submit" do %>
          <%= image_tag "/images/send.svg", class: "new_post_submit_icon" %>
          <div class="new_post_submit_text">Publicar</div>
        <% end %>
      </div>
  </div>
<% end %>
