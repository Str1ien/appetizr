
<%= render "header", locals: {restaurant: @restaurant, order: true} %>

<% if flash[:dishes] %>
  <div class="notice" ><%= flash[:dishes] %></div>
<% end %>
<ul>
  <% @restaurant.dishes.each do |dish| %>
    <li> 
      <div>
        <%= dish.nombre %>
        <%= dish.precio %>
      </div> 
    </li>
  <% end %>
</ul>



<h2> Reviews del restaurante </h2>
