<div class="title_container">
    <h1 class="title">Edita tu <span class="title_key_word">plato</span></h1>
</div>
<% if flash[:fails] %>
  <div class="notice" ><%= flash[:fails] %></div>
<% end %>
<%= render "form", dish: @dish %>

<% if !@dish.imported_id %> 
  <%= link_to restaurant_dish_path(@dish.id), style: "text-decoration: none; display: flex; justify-content: center;", data: {turbo_method: :delete} do %>
  <div class="restaurants_header_edit_button" style="width: 700px; background-color: var(--delete-color);">
    <span class="restaurants_header_edit_button_text" style="color: var(--black);">Eliminar Plato</span>
  </div> 
  <% end %>
<% end %>
